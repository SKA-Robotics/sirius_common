<launch>    
    <arg name="camera_calibration_path" default="$(find sirius_calibration)/kalibr/camimu/inflated/camimu-camchain-imucam.yaml"/>
    <arg name="imu_frequency"         default="200.0" />
    <arg name="model" default="$(find sirius_description)/robots/sirius.urdf.xacro"/>
    <arg name="robot_state_frequency" default="25"  />
    <!-- Marsyard 2022 map origin offset -->
    <arg name="gazebo_origin" default="[-9.396, 16.082]"/>
    <!-- ERC: Marsyard -->
    <arg name="spherical_coordinates" default="[50.878009, 20.642403, 144.41]"/>
    <arg name="elevation" default="308.1445"/>
    <!-- URC: The Mars Desert Research Station  -->
    <!-- <arg name="spherical_coordinates" default="[38.4190235, -110.7823884, 0.0]"/> -->
    <!-- <arg name="elevation" default="1378.0"/> -->    
    <arg name="stereo_fps"            default="30"  />
    <arg name="year" default=""/>
    
    <param name="robot_description" command="$(find xacro)/xacro '$(arg model)' calibration_path:='$(arg camera_calibration_path)' stereo_fps:='$(arg stereo_fps)' imu_frequency:='$(arg imu_frequency)' datum:='$(arg spherical_coordinates)' elevation:='$(arg elevation)' year:='$(arg year)' gazebo_origin:='$(arg gazebo_origin)'" />

    <include file="$(find sirius_calibration)/launch/calibration.launch" />

    <node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="$(arg robot_state_frequency)" />
    </node>
</launch>